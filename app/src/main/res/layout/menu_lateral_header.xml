<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_green"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/menuLateral_foto"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <ImageView
        android:id="@+id/menuLateral_moldura_foto"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/menu_lateral_moldura_foto" />

    <TextView
        android:id="@+id/menuLateral_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuLateral_foto"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/menuLateral_divisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuLateral_nome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/menu_lateral_divisor" />

</RelativeLayout>