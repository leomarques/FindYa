<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo">

    <RelativeLayout
        android:id="@+id/layoutAmigosFace"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@color/branco">

        <ImageView
            android:id="@+id/iconeAmigosFace"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:src="@drawable/add_amigo_face" />

        <TextView
            android:id="@+id/tituloAmigosFace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iconeAmigosFace"
            android:text="@string/tituloAmigosFace"
            android:textColor="@color/dark_green"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iconeAmigosFace"
            android:paddingLeft="3dp"
            android:text="Encontre seus amigos do Facebook que também usam o FindYa"
            android:textColor="@color/dark_green" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutAmigosComum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutAmigosFace"
        android:layout_marginTop="3dp"
        android:background="@color/branco">

        <ImageView
            android:id="@+id/iconeAmigosComum"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:src="@drawable/add_amigo_comum" />

        <TextView
            android:id="@+id/tituloAmigosComum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iconeAmigosComum"
            android:text="@string/tituloAmigosComum"
            android:textColor="@color/dark_green"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iconeAmigosComum"
            android:paddingLeft="3dp"
            android:text="Encontre amigos em comum de seus amigos no FindYa"
            android:textColor="@color/dark_green" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutUsuariosPublicos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutAmigosComum"
        android:layout_marginTop="3dp"
        android:background="@color/branco">

        <ImageView
            android:id="@+id/iconeUsuariosPublicos"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:src="@drawable/add_amigo_publico" />

        <TextView
            android:id="@+id/tituloUsuariosPublicos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iconeUsuariosPublicos"
            android:text="@string/tituloUsuariosPublicos"
            android:textColor="@color/dark_green"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iconeUsuariosPublicos"
            android:paddingLeft="3dp"
            android:text="Encontre usuários públicos próximo de onde você está"
            android:textColor="@color/dark_green" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutSolicitacoesAmizade"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutUsuariosPublicos"
        android:layout_marginTop="3dp"
        android:background="@color/branco">

        <ImageView
            android:id="@+id/iconeSolicitacoesAmizade"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:src="@drawable/add_amigo_solic" />

        <TextView
            android:id="@+id/tituloSolicitacoesAmizade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iconeSolicitacoesAmizade"
            android:text="@string/tituloSolicitacoesAmizade"
            android:textColor="@color/dark_green"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iconeSolicitacoesAmizade"
            android:paddingLeft="3dp"
            android:text="Veja suas solicitações de amizade"
            android:textColor="@color/dark_green" />
    </RelativeLayout>

</RelativeLayout>